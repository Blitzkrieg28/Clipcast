{
    "manifest_version": 3,
    "name": "ClipCast",
    "version": "1.0",
    "description": "an extension to download a clip from youtube videos.",
    "permissions": [
        "activeTab",
        "scripting",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png"
        },
        "icons": {
           "48": "images/icon48.png",
           "128": "images/icon128.png" 
        }
    }
}